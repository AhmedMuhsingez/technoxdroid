---
import ListCategories from '@/components/ListCategories'
import ListPosts from '@/components/ListPosts'
import TitlePage from '@/components/TitlePage'
import BaseLayout from '@/layouts/BaseLayout'
import Swiper from 'src/components/swiper/Swiper'
import { fetchArticles, fetchCategories } from 'src/utils/fetchApiData'
import Pagination from '@/components/Pagination'

const page = Astro.url.searchParams.get('page')

const categoriesData = await fetchCategories()

let currentPage = page ? Number(page) : 1

const articles = await fetchArticles(currentPage, 5)

let totalPages = articles.meta.pagination.pageCount

let pages = articles.meta.pagination

const allArticles = articles.data.map((article) => article)

const swiperContent = allArticles.slice(0, 4)
---

<BaseLayout title=''>
	<Swiper client:load swiperContent={swiperContent} />
	<TitlePage title={'جميع المقالات'} />

	<ListCategories categoriesData={categoriesData} />
	<ListPosts FirstBig={true} articles={allArticles} />

	<Pagination pages={pages} />
</BaseLayout>

<script>
	import { animate } from 'motion'
	const showAnimations = localStorage.getItem('animations') === 'true'

	if (showAnimations) {
		animate(
			'.title',
			{ y: [80, 0], opacity: [0, 1] },
			{
				duration: 2.5,
				opacity: { duration: 3 },

				offset: [0, 0.55, 0.75]
			}
		)
	}
</script>
