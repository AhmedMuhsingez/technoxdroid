---
import ListCategories from '@/components/ListCategories'
import ListPosts from '@/components/ListPosts'
import TitlePage from '@/components/TitlePage'
import BaseLayout from '@/layouts/BaseLayout'
import { fetchArticles } from 'src/utils/fetchApiData'
// const MAX_POSTS = 5 // max number of posts to show on the home page

// Home page compoenet
const allArticles = (await fetchArticles()).map((article) => {
	return article
})
// export const prerender = true
---

<BaseLayout title='الصفحة الرئيسية'>
	<TitlePage title={'تكنودرويد'} />
	<ListCategories />

	<div>
		<!-- <h2 class='text-lg font-medium tracking-wide'>آخر المقالات</h2> -->
		<ListPosts FirstBig={true} allArticles={allArticles} />
	</div>
</BaseLayout>

<script>
	import { animate } from 'motion'
	const showAnimations = localStorage.getItem('animations') === 'true'

	if (showAnimations) {
		animate(
			'.title',
			{ y: [80, 0], opacity: [0, 1] },
			{
				duration: 2.5,
				opacity: { duration: 3 },

				offset: [0, 0.55, 0.75]
			}
		)
	}
</script>
