---
import { cn } from 'src/utils/utils'
import Shape from './icons/Shape.astro'
type Props = {
	title: string
	styles?: string
}

const { title, styles = '' } = Astro.props

const isHomePage = Astro.url.pathname === '/'
---

<div
	class={cn(
		'flex justify-start items-center gap-2 title pt-6',
		isHomePage && title === 'جميع المقالات' && 'mt-4 md:mt-0',
		styles && styles
	)}
>
	<Shape />
	<h1 class='text-2xl md:text-3xl font-bold leading-snug'>
		{title}
	</h1>
</div>
