---
import { cn } from 'src/utils/utils'

const currentPath = Astro.url.searchParams.get('lang')
const isArabic = currentPath === 'ar'
const buttonStyle =
	'text-xl cursor-pointer flex w-fit px-4 py-2 rounded-t-lg border border-b-0 md:border-2 md:border-b-0 border-action-disabled'
const activeButton = 'border-action-active dark:border-action-activeDark py-3 cursor-default'
---

<div class='flex justify-between px-4'>
	<a
		href={isArabic ? 'javascript:;' : `?lang=` + 'ar'}
		class={cn(buttonStyle, isArabic ? activeButton : 'border-action-disabled')}>العربية</a
	>

	<a
		href={!isArabic ? 'javascript:;' : `?lang=` + 'en'}
		class={cn(
			buttonStyle,
			!isArabic || currentPath === null ? activeButton : 'border-action-disabled'
		)}>English</a
	>
</div>
