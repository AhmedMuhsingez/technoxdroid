---
import { cn } from '@/utils'
const { name = 'جميع المقالات', categorySlug } = Astro.props
const currentPath = Astro.url.pathname
let activeCategory = Astro.params.category
const isActive = name !== 'جميع المقالات' ? activeCategory === categorySlug : currentPath === '/'
---

<a
	href={name === 'جميع المقالات' ? '/' : `/category/${categorySlug}/1`}
	class={cn(
		`text-gray-600 dark:text-gray-300 pb-2.5 first-letter:uppercase font-medium hover:text-gray-800 border-b-2 border-opacity-0 dark:border-opacity-0 border-black dark:border-white dark:hover:border-white hover:border-opacity-100 transition-colors duration-150 ease-linear  `,
		isActive &&
			`border-black border-b-2 text-black z-10  dark:border-white dark:text-white dark:border-opacity-100 border-opacity-100 activeCategory`
	)}
	id={isActive ? 'activeCategory' : ''}
>
	{name}
</a>
<script>
	document.addEventListener('astro:after-swap', () => {
		const activeCategory = document.getElementById('activeCategory')
		activeCategory?.scrollIntoView({ behavior: 'smooth', block: 'nearest', inline: 'center' })
	})
</script>
