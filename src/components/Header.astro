---
import HeaderLink from '@/components/HeaderLink'
import TwitterIcon from '@/components/icons/TwitterIcon'
import GithubIcon from '@/components/icons/GithubIcon'
import MenuIcon from './icons/MenuIcon.astro'
// import Search from '@/components/Search'
import TagIcon from './icons/TagIcon.astro'
import ToggleTheme from './ToggleTheme.astro'
import SearchIcon from './icons/SearchIcon.astro'
import Profile from './icons/Profile.astro'
import { siteConfig } from '@/data/site.config'
import Facebook from './icons/Facebook.astro'
import ArrowLeft from './icons/ArrowLeft.astro'
import Logo from './Logo.astro'
const SOCIALNETWORKS = [
	{
		name: 'Github',
		url: 'https://github.com/AhmedMuhsingez',
		icon: GithubIcon,
		target: '_blank'
	},

	{
		name: 'Facebook',
		url: 'https://www.facebook.com/TechnoxDroid',
		icon: Facebook,
		target: '_blank'
	},
	{
		name: 'Profile',
		url: `/profile`,
		icon: Profile,
		target: ''
	}
]
const isAllArticles = Astro.url.pathname === '/'
---

<header class='flex items-center h-12 font-semibold justify-between'>
	<div class='flex items-center'>
		<a class='mt-2 ml-4' href='/'>{isAllArticles ? <Logo /> : <ArrowLeft />}</a>
		<span class='text-3xl'>تكنودرويد</span>
	</div>
	<>
		<div
			id='astro-header-drawer'
			class='shadow rounded-lg md:bg-transparent dark:md:bg-transparent bg-white dark:bg-[#0a0910] dark:border-solid dark:border-[white] dark:lg:border-none dark:md:border-none dark:border-2 md:shadow-none md:rounded-none md:border-none md:h-auto md:static absolute transition-transform duration-300 ease-in translate-x-96 md:translate-x-0 top-12 left-18 px-4 pt-6 pb-4 md:p-0 h-[100px] w-[200px] z-50'
		>
			<nav class='flex h-full gap-12 text-left justify-center md:flex-row md:gap-5 md:gap-0'>
				<div class='flex items-center md:justify-end gap-3 md:p-0'>
					<!-- <SearchIcon /> -->

					{
						SOCIALNETWORKS.map((network) => (
							<HeaderLink
								class=''
								href={network.url}
								target={network.target}
								aria-label={network.name}
							>
								<span>{<network.icon />} </span>
							</HeaderLink>
						))
					}
					<ToggleTheme />
				</div>
				<!-- <div class='flex items-center gap-3 md:pl-3' transition:persist='navbar'> -->
				<!-- </div> -->
			</nav>
		</div>
		<button
			id='astro-header-drawer-button'
			type='button'
			class='md:ml-6 md:hidden sm:visible lg:hidden'
		>
			<MenuIcon />
		</button>
	</>
</header>
<script>
	document.addEventListener('click', (event) => {
		const menu = document.getElementById('astro-header-drawer')
		const menuButton = document.getElementById('astro-header-drawer-button')
		const isClickInside =
			menu?.contains(event.target as HTMLDivElement) ||
			menuButton?.contains(event.target as HTMLButtonElement)

		if (isClickInside) {
			menu?.classList.toggle('translate-x-96')
		} else {
			menu?.classList.add('translate-x-96')
		}
	})
</script>
