---
import { Image } from 'astro:assets'
import FormattedDate from '@/components/FormattedDate'
import ArrowUp from '@/components/icons/ArrowUp'
import { cn } from 'src/utils/utils'
const { id, title, description, pubDate, heroImage, category, slug, isShortNews } = Astro.props

const currentPath = Astro.url.pathname
const isMovies = currentPath.includes('movies-and-shows')
const activeMovies = 'group-hover:text-movies-active group-hover:dark:text-movies-active'

const containerStyle =
	'flex flex-col justify-evenly gap-2 md:gap-0 py-6 ease-in duration-200 shadow-lightCard hover:shadow-lightCardHover dark:shadow-darkCard dark:hover:shadow-darkCardHover rounded-b-lg px-4 dark:bg-paper-dark flex flex-col'
---

<article class='grid grid-rows-[300px_auto] md:grid-rows-[300px_220px] min-h-full group'>
	<a
		class={cn('relative overflow-hidden', isShortNews && 'cursor-default')}
		href={isShortNews ? 'javascript:void(0);' : `/articles/${id}`}
		onclick={isShortNews && false}
	>
		{
			heroImage && (
				<Image
					src={heroImage}
					width={600}
					height={200}
					format='webp'
					class='h-full min-w-full object-cover hover:scale-[101%] transition-all duration-200 rounded-[2px]'
					alt={`صورة ${title}`}
				/>
			)
		}

		<div class='z-30 absolute bottom-0 w-full'>
			<div
				class='flex items-center justify-between gap-x-1 text-white px-6 py-4 -z-10 absolute bottom-0 glass w-full min-h-full'
			>
				<span class='pb-5'>{category}</span>
				<div class='flex flex-col gap-1 items-center justify-center'>
					<FormattedDate date={pubDate} />
				</div>
			</div>
		</div>
	</a>

	<div class={cn(containerStyle, isShortNews && 'text-center bg-white dark:bg-black')}>
		<div class='flex flex-col gap-2'>
			<a
				class={cn(
					'lg:text-xl md:text-base font-semibold -tracking-wider',
					isShortNews && 'cursor-default'
				)}
				href={isShortNews ? 'javascript:void(0);' : `/articles/${id}`}
			>
				{title}
			</a>
		</div>

		<p
			class={cn(
				'overflow-hidden line-clamp-3 text-gray-700 dark:text-white mb-5 font-extralight',
				isShortNews && 'mb-0'
			)}
		>
			<>{description}{!isShortNews && <p>...</p>}</>
		</p>

		{
			!isShortNews && (
				<footer class='flex justify-between items-center'>
					<a
						href={isShortNews ? 'javascript:void(0);' : `/articles/${id}`}
						onclick={isShortNews && false}
						class={cn(
							'flex justify-center items-center dark:text-white rounded-full hover:translate-x-1 transition-transform duration-150 ease-in-out font-semibold gap-1 group group-hover:text-action-active dark:group-hover:text-action-activeDark',
							isMovies && activeMovies
						)}
						aria-label={`go to ${title}`}
					>
						قراءة المقال
						<span
							class={cn(
								'mt-[1px] group-hover:rotate-45 transition-transform duration-250 ease-in-out hover:text-action-active dark:hover:text-action-activeDark',
								isMovies && activeMovies
							)}
						>
							<ArrowUp width='18' height='18' />
						</span>
					</a>
				</footer>
			)
		}
	</div>
</article>

<script>
	import { animate } from 'motion'

	const images = document.querySelectorAll('img')

	document.addEventListener('DOMContentLoaded', function () {
		const showAnimations = localStorage.getItem('animations') === 'true'

		if (showAnimations) {
			animate(
				'.effect',
				{
					opacity: [0, 1],
					clipPath: ['circle(0% at 0% 0%)', 'circle(100% at 50% 50%)']
				},
				{ duration: 2, easing: 'ease' }
			)
		} else {
			images.forEach((img) => {
				img.classList.remove('opacity-0')
			})
		}
	})
</script>
