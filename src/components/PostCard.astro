---
import { Image } from 'astro:assets'
import FormattedDate from '@/components/FormattedDate'
import ArrowUp from '@/components/icons/ArrowUp'
import { cn } from 'src/utils/utils'
const { id, title, description, pubDate, heroImage, category, slug, isShortNews, author } =
	Astro.props

const currentPath = Astro.url.pathname
const isMovies = currentPath.includes('movies-and-shows')
const activeMovies = 'group-hover:text-movies-active group-hover:dark:text-movies-active'
---

{
	isShortNews ? (
		<article class='flex relative col-span-3 max-h-[300px] min-h-[300px] w-full'>
			<Image
				src={heroImage}
				width={400}
				height={200}
				class='object-cover rounded-[2px]'
				alt={`صورة ${title}`}
			/>

			<div id='context' class='flex flex-col relative gap-2 p-6 rounded-lg w-full justify-between'>
				<div class='text-white text-3xl font-bold  '>
					<span class='text-black dark:text-white' id='title'>
						{title}
					</span>
				</div>
				<div class='text-gray-300 max-w-[80%]'>{description}</div>
				<div class='text-gray-400 text-sm'>
					<div id='date'>{pubDate}</div>
					<div id='author'>{author}</div>
				</div>

				<div
					id='hero-name'
					style={{ clipPath: 'polygon(0 0, 100% 0, 100% 97%, 0 94%)' }}
					class='rotate-90 absolute -left-0 ml-14 transform text-background-muted origin-top-left text-3xl md:text-5xl font-extrabold'
				>
					أخبار قصيرة
				</div>
			</div>
		</article>
	) : (
		<article class='grid grid-rows-[300px_auto] md:grid-rows-[300px_220px] min-h-full group'>
			<a class='relative overflow-hidden' href={`/articles/${id}`}>
				{heroImage && (
					<Image
						src={heroImage}
						width={600}
						height={200}
						format='webp'
						class='h-full min-w-full object-cover hover:scale-[101%] transition-all duration-200 rounded-[2px]'
						alt={`صورة ${title}`}
					/>
				)}

				<div class='z-30 absolute bottom-0 w-full'>
					<div class='flex items-center justify-between gap-x-1 text-white px-6 py-4 -z-10 absolute bottom-0 glass w-full min-h-full'>
						<span class='pb-5'>{category}</span>
						<div class='flex flex-col gap-1 items-center justify-center'>
							<FormattedDate date={pubDate} />
						</div>
					</div>
				</div>
			</a>

			<div
				class='flex justify-between
		flex-col gap-2 md:gap-0 py-6 px-2
		ease-in duration-200
		shadow-lightCard
		hover:shadow-lightCardHover
		dark:shadow-darkCard
		dark:hover:shadow-darkCardHover
		rounded-b-lg px-4
		dark:bg-paper-dark'
			>
				<div class='flex flex-col gap-3'>
					<div class='flex flex-col gap-2'>
						<a
							class='lg:text-xl md:text-base font-semibold -tracking-wider'
							href={`/articles/${id}/`}
						>
							{title}
						</a>
					</div>

					<p class='overflow-hidden line-clamp-3 text-gray-700 dark:text-white mb-5 font-extralight'>
						{description}...
					</p>
				</div>

				<footer class='flex justify-between items-center'>
					<a
						href={`/articles/${id}/`}
						class={cn(
							'flex justify-center items-center dark:text-white rounded-full hover:translate-x-1 transition-transform duration-150 ease-in-out font-semibold gap-1 group group-hover:text-action-active dark:group-hover:text-action-activeDark',
							isMovies && activeMovies
						)}
						aria-label={`go to ${title}`}
					>
						قراءة المقال
						<span
							class={cn(
								'mt-[1px] group-hover:rotate-45 transition-transform duration-250 ease-in-out hover:text-action-active dark:hover:text-action-activeDark',
								isMovies && activeMovies
							)}
						>
							<ArrowUp width='18' height='18' />
						</span>
					</a>
				</footer>
			</div>
		</article>
	)
}

<script>
	import { animate } from 'motion'

	const images = document.querySelectorAll('img')

	document.addEventListener('DOMContentLoaded', function () {
		const showAnimations = localStorage.getItem('animations') === 'true'

		if (showAnimations) {
			animate(
				'.effect',
				{
					opacity: [0, 1],
					clipPath: ['circle(0% at 0% 0%)', 'circle(100% at 50% 50%)']
				},
				{ duration: 2, easing: 'ease' }
			)
		} else {
			images.forEach((img) => {
				img.classList.remove('opacity-0')
			})
		}
	})
</script>
<style>
	#title {
		position: relative;
		padding: 0 0.5em;
		background-image: linear-gradient(
			0,
			transparent 25%,
			#7b3dad 25%,
			#7b3dad 45%,
			transparent 20%
		);
	}
</style>
